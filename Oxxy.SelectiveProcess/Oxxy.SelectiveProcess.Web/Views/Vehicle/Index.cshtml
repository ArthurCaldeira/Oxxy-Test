@{
    ViewData["Title"] = "Registro de veículos";
}
@model IEnumerable<VehicleModel>

<div class="text-center">
    <h1 class="display-4">Veículos registrados</h1>
    
	<div class="col text-end pt-1">
		<a asp-action="Create" class="btn btn-outline-primary">
			<i class="fas fa-plus"></i> Novo Veículo
		</a>
	</div>

    <table class="col-12">
        <thead>
            <tr>
                <th>
                    Bloqueio
                </th>
                <th>
                    Placa
                </th>
                <th>
                    Renavam
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>
                        Bloqueio
                    </td>
                    <td>
                        @vehicle.LicensePlate
                    </td>
                    <td>
                        @vehicle.License
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-success" asp-route-id="@vehicle.Id">
							<i class="fas fa-edit"></i>
						</a>
                        <a asp-action="Open" class="btn btn-primary" asp-route-id="@vehicle.Id">
							<i class="fas fa-eye"></i>
						</a>
						<a asp-action="Delete" class="btn btn-danger" asp-route-id="@vehicle.Id">
							<i class="fas fa-trash"></i>
						</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
